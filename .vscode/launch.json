      "target": "iPhone 15 Pro"
    },
    {
      "name": "Debug iOS (Simulator)",
      "cwd": "${workspaceFolder}",
      "type": "reactnative",
      "request": "launch",
      "platform": "ios",
      "target": "simulator"
    },
    {
      "name": "Debug Android",
      "cwd": "${workspaceFolder}",
      "type": "reactnative",
      "request": "launch",
      "platform": "android"
    },
    {
      "name": "Debug Android (Emulator)",
      "cwd": "${workspaceFolder}",
      "type": "reactnative",
